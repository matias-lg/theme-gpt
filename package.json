{
  "name": "theme-gpt",
  "displayName": "Theme GPT",
  "publisher": "matias-lg",
  "repository": {
    "type": "git",
    "url": "https://github.com/matias-lg/theme-gpt.git"
  },
  "description": "",
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "themes": [
      {
        "label": "Generated by theme-gpt",
        "uiTheme": "vs-dark",
        "path": "./themes/themegpt.json"
      }
    ],
    "configuration": [
      {
        "title": "Theme GPT",
        "properties": {
          "theme-gpt.openAiApiKey": {
            "type": "string",
            "default": "",
            "description": "OpenAI API Key"
          },
          "theme-gpt.gptModel": {
            "type": "string",
            "enum": [
              "gpt-4o",
              "gpt-4o-2024-05-13",
              "gpt-4-turbo",
              "gpt-4-turbo-2024-04-09",
              "gpt-4-0125-preview",
              "gpt-4-turbo-preview",
              "gpt-4-1106-preview",
              "gpt-4-vision-preview",
              "gpt-4",
              "gpt-4-0314",
              "gpt-4-0613",
              "gpt-4-32k",
              "gpt-4-32k-0314",
              "gpt-4-32k-0613",
              "gpt-3.5-turbo",
              "gpt-3.5-turbo-16k",
              "gpt-3.5-turbo-0301",
              "gpt-3.5-turbo-0613",
              "gpt-3.5-turbo-1106",
              "gpt-3.5-turbo-0125",
              "gpt-3.5-turbo-16k-0613"
            ],
            "default": "gpt-4o",
            "description": "OpenAI GPT Model to use in API calls"
          }
        }
      }
    ],
    "commands": [
      {
        "command": "theme-gpt.generatePalette",
        "title": "Theme GPT: Generate theme from a prompt"
      },
      {
        "command": "theme-gpt.setOpenAiApiKey",
        "title": "Theme GPT: Set OpenAI Api Key"
      },
      {
        "command": "theme-gpt.setGptModel",
        "title": "Theme GPT: Set GPT model"
      }
    ]
  },
  "scripts": {
    "compile": "npm run check-types && node esbuild.js",
    "check-types": "tsc --noEmit",
    "watch": "npm-run-all -p watch:*",
    "pretest": "npm run compile && pnpm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "vscode:prepublish": "npm run package",
    "package": "npm run check-types && node esbuild.js --production"

  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "20.x",
    "@types/vscode": "^1.90.0",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "esbuild": "^0.21.5",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "openai": "^4.51.0"
  }
}
